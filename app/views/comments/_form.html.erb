<% if user_signed_in? %>
  <% @comment ||= @post.comments.build %>
  <%= form_for([@comment.commentable, @comment]) do |f| %>

    <%= f.label :comment, "添加回应" %>
    <%= f.kindeditor :comment, :items => ['image', 'link'], :owner_id => @comment.id, :width => 700, :height => 200 %><br>
    <%= f.submit "提交", class: "btn btn-info"%>
  <% end -%>

<% else %>

  <%= link_to "登录后可以添加评论", new_user_session_path %>
<% end -%>
