<% provide(:title, "博文列表") %>

<div class="row">
  <div class="span9">
  	
    <% @posts.each do |post| %>
    <div class="post_title_archives">
    <div class="meta">
    	 <i class="icon-calendar"></i>
    <%= post.created_at %><br>
  	<i class="icon-tags"></i>
  	<%= raw post.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %>  	
    </div>
    <h3><%= link_to post.title, post %><br></h3>
    <% if admin? %>
      <%= link_to '修改', edit_post_path(post) %>
      <%= link_to '删除', post, method: :delete, data: { confirm: '确定要删除吗?' } %>
    <% end -%>
    </div>
    <% end %>
    
  </div>
  
  <div class="span3">
    <div class="well">
      <%= render 'shared/current_posts' %>
    </div>

    <div class="well">
      <%= render 'shared/tags' %>
    </div>
    
    <div class="well">
       <%= render 'shared/new_comments' %>
    </div>
 </div>
  </div>
</div>
