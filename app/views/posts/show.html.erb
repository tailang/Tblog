<% provide(:title, @post.title) %>
<div class="row">
	<div class="span9">
	  <h2><%= @post.title %></h2>
      <div class="post_body">
        <%= markdown(@post.body) %>
        <% if admin? %>
        <%= link_to '修改', edit_post_path(@post) %>
        <%= link_to '删除', post_path(@post), :method => :delete, :confirm => "确定删除吗?" %> <br>
      <% end -%>
      </div>
      
      <%= render @post.comments %><br>
      <div class="comment-area">
        <%= render 'comments/form' %>
      </div>
	</div>

	<div class="span3">
		<div class="well">
      <h3>当前博文:</h3>
      <%= render 'shared/current_posts' %>
    </div>

    <div class="well">
      <h4>标签:</h4>
      <%= render 'shared/tags' %>
    </div>
    
    <div class="well">
      <h4>最新评论 :</h4>
       <%= render 'shared/new_comments' %>
    </div>
 </div>
	</div>
</div>
